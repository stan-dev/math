project boost/url
    : requirements
      $(c11-requires)
      <link>shared:<define>BOOST_URL_DYN_LINK=1
      <link>static:<define>BOOST_URL_STATIC_LINK=1
      <define>BOOST_URL_SOURCE
      <toolset>msvc-14.0:<build>no
    : usage-requirements
      <link>shared:<define>BOOST_URL_DYN_LINK=1
      <link>static:<define>BOOST_URL_STATIC_LINK=1
    : source-location ../src
    ;

alias url_sources
   : src.cpp
   ;

explicit url_sources ;

lib boost_url
   : url_sources
   ;

boost-install boost_url ;
