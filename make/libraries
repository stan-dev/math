# used to create breaks in error messages
define n


endef

###############################################################################
# Library locations

MATH ?=
BOOST ?= $(MATH)lib/boost_1.75.0
EIGEN ?= $(MATH)lib/eigen_3.3.9
OPENCL ?= $(MATH)lib/opencl_3.0.0
TBB ?= $(MATH)lib/tbb_2020.3
