##
# This file should modify the following variables
# as appropriate:
#   - CFLAGS
#   - GTEST_CXXFLAGS
#   - EXE
##

ifeq (g++,$(CC_TYPE))
  LDFLAGS += -lpthread
  GTEST_CXXFLAGS += -DGTEST_HAS_PTHREAD=0
  ifdef STAN_OPENCL
    LDFLAGS += -lOpenCL
  endif
endif
ifeq (mingw32-g++,$(CC_TYPE))
  GTEST_CXXFLAGS += -DGTEST_HAS_PTHREAD=0
  LDLIBS_STANC += -static
  LDFLAGS += -static
  LDFLAGS += -lwinpthread
  EXE = .exe
  WINE = wine
  ifdef STAN_OPENCL
    LDFLAGS += -lOpenCL
  endif
endif
ifeq (clang++,$(CC_TYPE))
  GTEST_CXXFLAGS += -DGTEST_HAS_PTHREAD=0
  ifdef STAN_OPENCL
    LDLIBS += -lOpenCL
  endif
endif
